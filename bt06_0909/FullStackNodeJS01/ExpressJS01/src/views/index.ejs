<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Ecommerce API' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .hero-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 3rem;
            margin: 2rem 0;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }
        .api-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 1.5rem;
            margin: 1rem 0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .api-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        .endpoint {
            background: #f8f9fa;
            border-left: 4px solid #007bff;
            padding: 0.5rem 1rem;
            margin: 0.5rem 0;
            border-radius: 5px;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
        }
        .method-get { border-left-color: #28a745; }
        .method-post { border-left-color: #007bff; }
        .method-put { border-left-color: #ffc107; }
        .method-delete { border-left-color: #dc3545; }
        .status-badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        .status-online {
            background: #d4edda;
            color: #155724;
        }
        .feature-icon {
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section text-center">
            <h1 class="display-4 mb-4">
                <i class="fas fa-rocket me-3"></i>
                Ecommerce API
            </h1>
            <p class="lead mb-4"><%= message || 'API is running successfully' %></p>
            <div class="d-flex justify-content-center align-items-center mb-3">
                <span class="status-badge status-online me-3">
                    <i class="fas fa-circle me-2"></i>Online
                </span>
                <span class="text-light">
                    <i class="fas fa-server me-2"></i>
                    Node.js <%= process.version %>
                </span>
            </div>
            <a href="/api/health" class="btn btn-light btn-lg me-3">
                <i class="fas fa-heartbeat me-2"></i>Health Check
            </a>
            <a href="/api/info" class="btn btn-outline-light btn-lg">
                <i class="fas fa-info-circle me-2"></i>API Info
            </a>
        </div>

        <div class="row">
            <!-- Features -->
            <div class="col-md-6">
                <div class="api-card">
                    <div class="text-center">
                        <i class="fas fa-cog feature-icon"></i>
                        <h4>Features</h4>
                    </div>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>User Authentication & Authorization</li>
                        <li><i class="fas fa-check text-success me-2"></i>Product Management</li>
                        <li><i class="fas fa-check text-success me-2"></i>Category Management</li>
                        <li><i class="fas fa-check text-success me-2"></i>Lazy Loading & Pagination</li>
                        <li><i class="fas fa-check text-success me-2"></i>Search & Filtering</li>
                        <li><i class="fas fa-check text-success me-2"></i>Role-based Access Control</li>
                        <li><i class="fas fa-check text-success me-2"></i>Email Verification</li>
                        <li><i class="fas fa-check text-success me-2"></i>Password Reset</li>
                    </ul>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="col-md-6">
                <div class="api-card">
                    <div class="text-center">
                        <i class="fas fa-chart-bar feature-icon"></i>
                        <h4>API Statistics</h4>
                    </div>
                    <div class="row text-center">
                        <div class="col-6">
                            <h5 class="text-primary">30+</h5>
                            <small class="text-muted">API Endpoints</small>
                        </div>
                        <div class="col-6">
                            <h5 class="text-success">JWT</h5>
                            <small class="text-muted">Authentication</small>
                        </div>
                        <div class="col-6 mt-3">
                            <h5 class="text-warning">MySQL</h5>
                            <small class="text-muted">Database</small>
                        </div>
                        <div class="col-6 mt-3">
                            <h5 class="text-info">REST</h5>
                            <small class="text-muted">API Design</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- API Endpoints -->
        <div class="row">
            <div class="col-12">
                <div class="api-card">
                    <h4 class="mb-4">
                        <i class="fas fa-link me-2"></i>
                        API Endpoints
                    </h4>

                    <div class="row">
                        <!-- Public Endpoints -->
                        <div class="col-md-6">
                            <h5 class="text-primary">üåê Public Endpoints</h5>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/home
                                <br><small>Get home page data</small>
                            </div>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/products
                                <br><small>Get products with pagination</small>
                            </div>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/products/category/:slug
                                <br><small>Get products by category</small>
                            </div>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/categories
                                <br><small>Get all categories</small>
                            </div>
                            
                            <div class="endpoint method-post">
                                <strong>POST</strong> /api/auth/register
                                <br><small>User registration</small>
                            </div>
                            
                            <div class="endpoint method-post">
                                <strong>POST</strong> /api/auth/login
                                <br><small>User login</small>
                            </div>
                        </div>

                        <!-- Protected Endpoints -->
                        <div class="col-md-6">
                            <h5 class="text-warning">üîê Protected Endpoints</h5>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/users/profile
                                <br><small>Get user profile</small>
                            </div>
                            
                            <div class="endpoint method-put">
                                <strong>PUT</strong> /api/users/profile
                                <br><small>Update user profile</small>
                            </div>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/users
                                <br><small>Get all users (Admin)</small>
                            </div>
                            
                            <div class="endpoint method-post">
                                <strong>POST</strong> /api/admin/products
                                <br><small>Create product (Staff)</small>
                            </div>
                            
                            <div class="endpoint method-post">
                                <strong>POST</strong> /api/admin/categories
                                <br><small>Create category (Staff)</small>
                            </div>
                            
                            <div class="endpoint method-get">
                                <strong>GET</strong> /api/admin/products/stats/overview
                                <br><small>Product statistics (Admin)</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <a href="/api/info" class="btn btn-primary">
                            <i class="fas fa-book me-2"></i>
                            View Full API Documentation
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-5 mb-3">
            <p class="text-light">
                <i class="fas fa-code me-2"></i>
                Built with Express.js, MySQL & JWT Authentication
            </p>
            <p class="text-light">
                <small>
                    <i class="fas fa-clock me-2"></i>
                    Started at <%= new Date().toLocaleString() %>
                </small>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add some interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Animate cards on load
            const cards = document.querySelectorAll('.api-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
            
            // Add click effect to endpoints
            const endpoints = document.querySelectorAll('.endpoint');
            endpoints.forEach(endpoint => {
                endpoint.addEventListener('click', function() {
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 100);
                });
            });
        });
    </script>
</body>
</html>
